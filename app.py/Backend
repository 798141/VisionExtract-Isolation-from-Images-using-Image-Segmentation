from flask import Flask, render_template, request, redirect, url_for
from werkzeug.utils import secure_filename
import os
from PIL import Image
import numpy as np

app = Flask(__name__)

# Configure upload folders
UPLOAD_FOLDER = "static/uploads"
RESULT_FOLDER = "static/results"
os.makedirs(UPLOAD_FOLDER, exist_ok=True)
os.makedirs(RESULT_FOLDER, exist_ok=True)

app.config["UPLOAD_FOLDER"] = UPLOAD_FOLDER
app.config["RESULT_FOLDER"] = RESULT_FOLDER

ALLOWED_EXTENSIONS = {"png", "jpg", "jpeg"}

# TODO: load your trained segmentation model here
# model = load_your_model(...)

def allowed_file(filename):
    return "." in filename and filename.rsplit(".", 1)[1].lower() in ALLOWED_EXTENSIONS

def run_segmentation_model(image_path):
    """
    Dummy placeholder for your segmentation.
    Replace this with actual model inference that returns an RGBA or RGB image
    where background is black and subject is preserved.
    """
    img = Image.open(image_path).convert("RGB")
    # Example: here just return original image (no segmentation) for now
    return img

@app.route("/", methods=["GET", "POST"])
def index():
    if request.method == "POST":
        if "image" not in request.files:
            return redirect(request.url)

        file = request.files["image"]
        if file.filename == "":
            return redirect(request.url)

        if file and allowed_file(file.filename):
            filename = secure_filename(file.filename)
            input_path = os.path.join(app.config["UPLOAD_FOLDER"], filename)
            file.save(input_path)

            # Run segmentation model
            output_img = run_segmentation_model(input_path)

            # Save result
            result_name = "segmented_" + filename
            result_path = os.path.join(app.config["RESULT_FOLDER"], result_name)
            output_img.save(result_path)

            return render_template(
                "index.html",
                input_image=url_for("static", filename=f"uploads/{filename}"),
                result_image=url_for("static", filename=f"results/{result_name}")
            )

    return render_template("index.html", input_image=None, result_image=None)


if __name__ == "__main__":
    app.run(debug=True)
